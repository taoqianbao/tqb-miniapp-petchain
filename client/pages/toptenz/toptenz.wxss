/* pages/toptenz/toptenz.wxss */

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.menu-select-btns, .toptenz-container, .toptenz-item,
.toptenz-item .toptenz-item-l, .toptenz-item .toptenz-item-r {
  display: flex;
}

.menu-select-btns {
  justify-content: center;
}

.toptenz-container {
  width: 100%;
  flex-wrap: wrap;
  justify-content: center;
}

.toptenz-item {
  width: 80%;
  height: 200rpx;
  margin: 10rpx 0;
  border: 1rpx solid red;
  align-items: stretch;
  justify-content: center;
}

.toptenz-item .toptenz-item-l {
  width: 150rpx;
  align-items: center;
}

.toptenz-item .toptenz-item-r {
  flex-wrap: wrap;
  align-items: center;
}

.toptenz-item .toptenz-item-r text {
  width: 50%;
}

.section-item-avatar {
  width: 100rpx;
  height: 100rpx;
}
