/* pages/chain/splash/splash.wxss */

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
  width: 100%;
  display: flex;
}

.splash {
  width: 90%;
  padding: 10rpx;
  border-radius: 5rpx;
  position: relative;
}

.splash-title {
  font-weight: bold;
  font-size: 36rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
}

.splash-content {
  overflow: hidden;
  position: relative;
  width: 100%;
  height: 350rpx;
}

.splash-flash-content1 {
  position: absolute;
  top: 0;
  width: 100%;
}

.splash-flash-content2 {
  position: absolute;
  top: 0;
  left: 542rpx;
  width: 100%;
}

.splash-content-img {
  width: 542rpx;
  height: 231rpx;
}

.splash-abstract {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  color: #797979;
  font-size: 16px;
}

.jump-to-market {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 32rpx;
  font-weight: 100;
  color: red;
}

.footer {
  width: 100%;
}

.btnnew {
  margin-top: 26rpx;
  width: 90%;
  height: 73rpx;
  line-height: 73rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
}
