/* pages/index/index.wxss */

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.cp-userdata-wrap {
  width: 100%;
}

.cp-menuinfo {
  width: 100%;
}

/*section*/

.section {
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}

.section .scroll-view-item {
  width: 30%;
  height: 200rpx;
  background: white;
  margin: 20rpx 0;
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: space-between;
}

.scroll-view-item .section-image {
  width: 50%;
  height: 50%;
}

.scroll-view-item button {
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  padding: 0;
  margin: 0;
  color: white;
}

.section .bc_green {
  background: green;
}

.section .bc_red {
  background: red;
}

.section .bc_yellow {
  background: yellow;
}

.section .bc_blue {
  background: blue;
}

/** 修改默认的navigator点击态 **/

.navigator-hover {
  color: blue;
}

/** 自定义其他点击态样式类 **/

.other-navigator-hover {
  color: red;
}
